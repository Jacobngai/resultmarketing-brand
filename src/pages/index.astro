---
import BaseLayout from '../layouts/BaseLayout.astro';

// Get latest 3 posts for homepage
const posts = await Astro.glob('./learn/*.md');
const latestPosts = posts
  .sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime())
  .slice(0, 3);
---

<BaseLayout title="Business Insights for Malaysian SMEs">
  <!-- Hero Section -->
  <section class="min-h-[80vh] flex items-center">
    <div class="max-w-6xl mx-auto px-6">
      <div class="max-w-3xl">
        <h1 class="text-display font-semibold text-brand-black mb-8">
          Learn from the<br/>
          <span class="text-brand-gray-400">world's best.</span>
        </h1>
        <p class="text-xl text-brand-gray-600 leading-relaxed mb-12 max-w-xl">
          We distill insights from top business minds and share how Malaysian SMEs can apply them. AI, automation, growth — no fluff.
        </p>
        <div class="flex gap-4">
          <a href="/learn" class="px-8 py-4 bg-brand-black text-white rounded-full hover:bg-brand-gray-800 transition-colors">
            Start Learning
          </a>
          <a href="https://cal.com/zen-pdcnlc/coffee" class="px-8 py-4 border border-brand-gray-300 rounded-full hover:border-brand-black transition-colors">
            Talk to Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Cover -->
  <section class="py-32 bg-brand-gray-50">
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="text-heading font-semibold mb-16">What we cover</h2>
      <div class="grid grid-cols-3 gap-8">
        <div class="p-8 bg-white rounded-2xl">
          <div class="w-12 h-12 bg-brand-gray-100 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-medium mb-3">AI & Automation</h3>
          <p class="text-brand-gray-600 text-sm leading-relaxed">
            Practical AI applications for Malaysian businesses. ChatGPT, Claude, automation workflows — what actually works.
          </p>
        </div>
        <div class="p-8 bg-white rounded-2xl">
          <div class="w-12 h-12 bg-brand-gray-100 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <h3 class="text-lg font-medium mb-3">Business Growth</h3>
          <p class="text-brand-gray-600 text-sm leading-relaxed">
            Sales, marketing, and scaling strategies from proven entrepreneurs. Adapted for the Malaysian market.
          </p>
        </div>
        <div class="p-8 bg-white rounded-2xl">
          <div class="w-12 h-12 bg-brand-gray-100 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="text-lg font-medium mb-3">Business Learning</h3>
          <p class="text-brand-gray-600 text-sm leading-relaxed">
            Insights from Jay Abraham, Alex Hormozi, and other masters — translated into actionable advice for SMEs.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Learning -->
  <section class="py-32">
    <div class="max-w-6xl mx-auto px-6">
      <div class="flex items-end justify-between mb-16">
        <h2 class="text-heading font-semibold">Latest learning</h2>
        <a href="/learn" class="text-sm text-brand-gray-600 hover:text-brand-black transition-colors">
          View all →
        </a>
      </div>
      <div class="grid grid-cols-3 gap-8">
        {latestPosts.map((post) => (
          <a href={post.url} class="group">
            <div class="aspect-video bg-brand-gray-100 rounded-2xl mb-6 overflow-hidden">
              {post.frontmatter.image && (
                <img src={post.frontmatter.image} alt="" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
              )}
            </div>
            <div class="text-sm text-brand-gray-500 mb-2">{post.frontmatter.category}</div>
            <h3 class="text-lg font-medium mb-2 group-hover:text-brand-blue transition-colors">{post.frontmatter.title}</h3>
            <p class="text-sm text-brand-gray-600 line-clamp-2">{post.frontmatter.excerpt}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-32 bg-brand-black text-white">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <h2 class="text-heading font-semibold mb-6">Ready to grow your business?</h2>
      <p class="text-brand-gray-400 text-lg mb-12 max-w-xl mx-auto">
        Let's talk about how AI and automation can transform your Malaysian SME.
      </p>
      <a href="https://cal.com/zen-pdcnlc/coffee" class="inline-block px-8 py-4 bg-white text-brand-black rounded-full hover:bg-brand-gray-100 transition-colors">
        Book a Free Call
      </a>
    </div>
  </section>
</BaseLayout>
